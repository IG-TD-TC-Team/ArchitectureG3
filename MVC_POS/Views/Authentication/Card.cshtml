@model MVC_POS.Models.CardM

@{
    ViewData["Title"] = "Card Authentication";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Scan Card</h4>
            </div>
            <div class="card-body">
                <form asp-action="Card" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="CardId" class="control-label">Card ID</label>
                        <input asp-for="CardId" class="form-control" placeholder="Scan or enter card ID" autofocus />
                        <span asp-validation-for="CardId" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-success">Authenticate</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}