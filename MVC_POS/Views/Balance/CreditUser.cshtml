@model MVC_POS.Models.BalanceM

@{
    ViewData["Title"] = "Add Credit";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Add Credit to User Account</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreditUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="UserId" />

                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="control-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">CHF</span>
                            <input asp-for="Amount" class="form-control" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-success">Add Credit</button>
                        <a asp-action="UserBalance" asp-route-userId="@Model.UserId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}