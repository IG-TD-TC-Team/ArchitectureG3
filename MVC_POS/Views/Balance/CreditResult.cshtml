@model MVC_POS.Models.UserM

@{
    ViewData["Title"] = "Credit Result";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4>Credit Added Successfully</h4>
            </div>
            <div class="card-body">
                <h5>Updated Balance for @(Model.FirstName ?? "") @(Model.LastName ?? "")</h5>

                <dl class="row mt-4">
                    <dt class="col-sm-6">CHF Balance:</dt>
                    <dd class="col-sm-6">@Model.QuotaCHF.ToString("C")</dd>

                    <dt class="col-sm-6">Copy Quota:</dt>
                    <dd class="col-sm-6">@Model.CopyQuota pages</dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <a asp-action="UserBalance" asp-route-userId="@Model.UID" class="btn btn-primary">View Balance</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Return to Home</a>
            </div>
        </div>
    </div>
</div>