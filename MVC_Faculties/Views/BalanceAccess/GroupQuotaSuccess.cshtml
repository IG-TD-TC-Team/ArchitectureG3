@{
    ViewData["Title"] = "Group Quota Added Successfully";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4><i class="fas fa-check-circle"></i> Group Quota Added Successfully</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <h5 class="alert-heading">✅ Operation Completed Successfully!</h5>
                    <p class="mb-0">Printing quota has been successfully added to all users in the specified group.</p>
                </div>

                <h5 class="mt-4">Operation Summary</h5>
                <div class="card bg-light">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Target Group:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@ViewBag.GroupName</span>
                            </dd>

                            <dt class="col-sm-4">Amount Added per User:</dt>
                            <dd class="col-sm-8">
                                <strong class="text-success">@ViewBag.Amount.ToString("C")</strong>
                            </dd>

                            <dt class="col-sm-4">Users Affected:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@ViewBag.UserCount users</span>
                            </dd>

                            <dt class="col-sm-4">Total Quota Distributed:</dt>
                            <dd class="col-sm-8">
                                <strong class="text-primary">@((ViewBag.Amount * ViewBag.UserCount).ToString("C"))</strong>
                            </dd>

                            <dt class="col-sm-4">Operation Date:</dt>
                            <dd class="col-sm-8">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>

                @* Session-aware next steps *@
                @if (Context.Session.Keys.Contains("UserId"))
                {
                    <div class="card border-primary mt-4">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="fas fa-forward"></i> What would you like to do next?</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Continue Staff Operations</h6>
                                    <p class="small text-muted">Your session is still active as @Context.Session.GetString("Username")</p>
                                    <div class="d-grid gap-2">
                                        <a asp-action="AddQuotaByGroup" class="btn btn-warning">
                                            <i class="fas fa-users-cog"></i> Add Quota to Another Group
                                        </a>
                                        <a asp-controller="BalanceAccess" asp-action="AddQuotaByUsername" class="btn btn-success">
                                            <i class="fas fa-user-plus"></i> Individual User Management
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6>Session Management</h6>
                                    <p class="small text-muted">Manage your current session</p>
                                    <div class="d-grid gap-2">
                                        <a asp-controller="AuthenticationAccess" asp-action="Index" class="btn btn-primary">
                                            <i class="fas fa-home"></i> Return to Dashboard
                                        </a>
                                        <a asp-controller="AuthenticationAccess" asp-action="Logout" class="btn btn-outline-danger">
                                            <i class="fas fa-sign-out-alt"></i> Logout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>