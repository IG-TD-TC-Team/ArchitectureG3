@{
    ViewData["Title"] = "Group Quota Added Successfully";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4><i class="fas fa-check-circle"></i> Group Quota Added Successfully</h4>
            </div>
            <div class="card-body">
                @* Main success message *@
                <div class="alert alert-success">
                    <h5 class="alert-heading">✅ Operation Completed Successfully!</h5>
                    <p class="mb-0">Printing quota has been successfully added to all users in the specified group.</p>
                </div>

                @* Detailed operation summary *@
                <h5 class="mt-4">Operation Summary</h5>
                <div class="card bg-light">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Target Group:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@ViewBag.GroupName</span>
                            </dd>

                            <dt class="col-sm-4">Amount Added per User:</dt>
                            <dd class="col-sm-8">
                                <strong class="text-success">@ViewBag.Amount.ToString("C")</strong>
                            </dd>

                            <dt class="col-sm-4">Users Affected:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@ViewBag.UserCount users</span>
                            </dd>

                            <dt class="col-sm-4">Total Quota Distributed:</dt>
                            <dd class="col-sm-8">
                                <strong class="text-primary">@((ViewBag.Amount * ViewBag.UserCount).ToString("C"))</strong>
                            </dd>

                            <dt class="col-sm-4">Operation Date:</dt>
                            <dd class="col-sm-8">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>

                @* Next steps suggestions *@
                <div class="card border-secondary mt-4">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0">What would you like to do next?</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Group Operations</h6>
                                <div class="d-grid gap-2">
                                    <!-- AddQuotaByGroup mapping -->
                                    <a asp-action="AddQuotaByGroup" class="btn btn-success btn-sm">
                                        Add Quota to Another Group
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6>Individual Operations</h6>
                                <div class="d-grid gap-2">
                                    <!-- AuthenticateByUsername mapping -->
                                    <a asp-controller="AuthenticationAccess" asp-action="AuthenticateByUsername" class="btn btn-primary btn-sm">
                                        Add Quota to Individual User
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <!-- Index mapping -->
                <a asp-controller="AuthenticationAccess" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-home"></i> Return to Main Menu
                </a>
            </div>
        </div>
    </div>
</div>