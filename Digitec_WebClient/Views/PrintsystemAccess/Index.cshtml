
@{
    ViewData["Title"] = "Printing System Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Printing System</h1>
    <p class="lead">Manage printing quotas and access printing services</p>

    @* Display any messages from previous operations *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @* Show authentication status if user is logged in *@
    @if (TempData["Username"] != null)
    {
        <div class="alert alert-info">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h5><i class="fas fa-user"></i> Welcome, @TempData["Username"]!</h5>
                    @if (TempData["IsStaff"]?.ToString() == "True")
                    {
                        <p class="mb-0"><i class="fas fa-shield-alt text-success"></i> <strong>Staff Access:</strong> You have permissions for both individual and group quota management.</p>
                    }
                    else
                    {
                        <p class="mb-0"><i class="fas fa-info-circle text-warning"></i> <strong>Standard Access:</strong> You can manage individual user quotas only.</p>
                    }
                </div>
                <!-- Simple Logout button -->
                <div>
                    <a asp-action="Logout" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    }

    @* Main feature selection section *@
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Quota Management Options</h3>
            <p class="text-muted mb-4">Choose the type of quota management you need to perform</p>
        </div>
    </div>

    <div class="row">
        @* Individual User Management Card *@
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user"></i> Individual User Management
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        Add printing quota to a specific user account. Perfect for handling individual
                        requests, special allocations, or targeted quota adjustments.
                    </p>

                    <ul class="list-unstyled text-start mb-4">
                        <li><i class="fas fa-check text-success"></i> Precise control over individual accounts</li>
                        <li><i class="fas fa-check text-success"></i> Username and password authentication</li>
                        <li><i class="fas fa-check text-success"></i> Immediate quota activation</li>
                        <li><i class="fas fa-check text-success"></i> Detailed transaction records</li>
                    </ul>

                    <div class="mt-auto">
                       
                        <a asp-action="AddQuotaByUsername" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus"></i> Manage Individual User
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Available to all authenticated users</small>
                </div>
            </div>
        </div>

        @* Group Management Card *@
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Group Management
                        @if (TempData["Username"] == null || TempData["IsStaff"]?.ToString() != "True")
                        {
                            <i class="fas fa-key ml-2" title="Authentication required"></i>
                        }
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        Add printing quota to all users within a specific group simultaneously.
                        Ideal for bulk operations, semester allocations, or department-wide updates.
                    </p>

                    <ul class="list-unstyled text-start mb-4">
                        <li><i class="fas fa-check text-success"></i> Bulk quota distribution</li>
                        <li><i class="fas fa-check text-success"></i> Group-based targeting (student, staff, faculty)</li>
                        <li><i class="fas fa-check text-success"></i> Efficient mass operations</li>
                        <li><i class="fas fa-check text-success"></i> Comprehensive operation reports</li>
                    </ul>

                    <!-- Status indicators based on current authentication -->
                    @if (TempData["IsStaff"]?.ToString() == "True")
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-shield-alt"></i> <strong>Staff Access Verified</strong>
                        </div>
                    }
                    else if (TempData["Username"] != null)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> <strong>Staff Access Required</strong><br>
                            <small>Your account doesn't have staff permissions for group operations.</small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> <strong>Authentication Required</strong><br>
                            <small>Click below to authenticate and access group management.</small>
                        </div>
                    }

                    <div class="mt-auto">
                        @if (TempData["IsStaff"]?.ToString() == "True")
                        {
                            <!-- User is already authenticated and has staff permissions -->
                            <a asp-action="AddQuotaByGroup" class="btn btn-success btn-lg">
                                <i class="fas fa-users-cog"></i> Manage Group Quota
                            </a>
                        }
                        else if (TempData["Username"] != null)
                        {
                            <!-- User is authenticated but doesn't have staff permissions -->
                            <button class="btn btn-secondary btn-lg" disabled>
                                <i class="fas fa-users-cog"></i> Staff Access Required
                            </button>
                        }
                        else
                        {
                            <!-- SIMPLE: Direct link - will auto-redirect to auth if needed -->
                            <a asp-action="AddQuotaByGroup" class="btn btn-warning btn-lg">
                                <i class="fas fa-users-cog"></i> Manage Group Quota
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        @if (TempData["IsStaff"]?.ToString() == "True")
                        {
                            <span class="text-success">✓ Staff permissions active</span>
                        }
                        else if (TempData["Username"] != null)
                        {
                            <span class="text-warning">⚠ Staff access required</span>
                        }
                        else
                        {
                            <span class="text-info">Click to authenticate</span>
                        }
                    </small>
                </div>
            </div>
        </div>
    </div>

    
</div>