@{
    ViewData["Title"] = "Printing System Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Printing System</h1>
    <p class="lead">Manage printing quotas and access printing services</p>

    @* Display any messages from previous operations *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @* Main feature selection section *@
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Quota Management Options</h3>
            <p class="text-muted mb-4">Choose the type of quota management you need to perform</p>
        </div>
    </div>

    <div class="row">
        @* Individual User Management Card *@
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user"></i> Individual User Management
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        Add printing quota to a specific user account. Perfect for handling individual
                        requests, special allocations, or targeted quota adjustments.
                    </p>

                    @* Feature highlights for individual management *@
                    <ul class="list-unstyled text-start mb-4">
                        <li><i class="fas fa-check text-success"></i> Precise control over individual accounts</li>
                        <li><i class="fas fa-check text-success"></i> Username and password authentication</li>
                        <li><i class="fas fa-check text-success"></i> Immediate quota activation</li>
                        <li><i class="fas fa-check text-success"></i> Detailed transaction records</li>
                    </ul>

                    <div class="mt-auto">
                        <a asp-action="AuthenticateByUsername" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus"></i> Manage Individual User
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Best for: Single user requests, special allocations</small>
                </div>
            </div>
        </div>

        @* Group Management Card *@
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Group Management
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        Add printing quota to all users within a specific group simultaneously.
                        Ideal for bulk operations, semester allocations, or department-wide updates.
                    </p>

                    @* Feature highlights for group management *@
                    <ul class="list-unstyled text-start mb-4">
                        <li><i class="fas fa-check text-success"></i> Bulk quota distribution</li>
                        <li><i class="fas fa-check text-success"></i> Group-based targeting (student, staff, faculty)</li>
                        <li><i class="fas fa-check text-success"></i> Efficient mass operations</li>
                        <li><i class="fas fa-check text-success"></i> Comprehensive operation reports</li>
                    </ul>

                    <div class="mt-auto">
                        <a asp-action="AddQuotaByGroup" class="btn btn-warning btn-lg">
                            <i class="fas fa-users-cog"></i> Manage Group Quota
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Best for: Semester start, department allocations, bulk updates</small>
                </div>
            </div>
        </div>
    </div>

    @* Additional system features section *@
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="mb-4">Additional System Features</h4>
        </div>
    </div>

    <div class="row">
        @* System Status and Monitoring *@
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-2x text-info mb-3"></i>
                    <h6 class="card-title">System Reports</h6>
                    <p class="card-text small">View usage statistics and quota distribution reports.</p>
                    <a href="#" class="btn btn-outline-info btn-sm disabled">
                        Coming Soon
                    </a>
                </div>
            </div>
        </div>

        @* Print History *@
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-history fa-2x text-secondary mb-3"></i>
                    <h6 class="card-title">Print History</h6>
                    <p class="card-text small">Review detailed printing transaction logs and user activity.</p>
                    <a href="#" class="btn btn-outline-secondary btn-sm disabled">
                        Coming Soon
                    </a>
                </div>
            </div>
        </div>

        @* Printer Status *@
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-print fa-2x text
